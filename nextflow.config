docker.enabled = true
docker.runOptions = '-u $(id -u):$(id -g)'

profiles {
    standard {
        process.executor = 'local'
        docker.enabled = true
    }

    hpc {
        process.executor = 'slurm'
        process.queue = 'batch'
        docker.enabled = false
        singularity.enabled = true
    }
}

// Use local work directory for Docker execution
workDir = "/data/work"
